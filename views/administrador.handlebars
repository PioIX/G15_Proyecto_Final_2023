<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar</title>
</head>
<body>
    <section class="section-login-registro">
        <form action="/leerUsuarios" method="post"></form>
        <form action="/modificarUsuario" method="post"></form>

        <div class="mb-3 form-group">
            <h2><strong>EDITAR</strong></h2>
        </div>

        <div class="mb-3 form-group">
            <label for="id_usuario" class="form-label">Elegir usuario</label>
            <select id="selectUsuarios" onchange="leerUsuarios()">
                {{#each usuarios}}
                    <option value="{{this.id_usuarios}}">{{this.id_usuarios}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mb-3 form-group">
            <label for="nombreDeUsuario" class="form-label">Usuario</label>
            <input type="text" class="form-control" id="usuario" name="usuario" value="" placeholder="Usuario">
        </div>
        <div class="mb-3 form-group">
            <label for="id_usuario" class="form-label">Es administrador</label>
            <select id="esAdmin" onchange="leerUsuarios()">
                <option value="Si">Si</option> 
                <option value="No">No</option>
                <!-- PREGUNTAR TRUE Y FALSE-->
            </select>
        </div>
        <div class="form-login-registro">
            <input type="submit" class="botones" onclick="agregarUsuarios()" value="Agregar Usuario"> 
        </div>
        <div class="mb-3 form-check">
            <input type="submit" onclick="modificarUsuarios()" class="botones" value="Modificar"> 
        </div>
        <div class="mb-3 form-check">
            <input type="submit" onclick="eliminarUsuarios()" class="botones" value="Eliminar" style="background-color: rgb(226, 80, 80);"> 
        </div>
        
    </section>
</body>
</html>
